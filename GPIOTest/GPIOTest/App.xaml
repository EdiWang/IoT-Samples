<Application
    x:Class="GPIOTest.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GPIOTest"
    xmlns:converters="using:Edi.UWP.Helpers.Converters"
    xmlns:viewModel="using:GPIOTest.ViewModel"
    RequestedTheme="Dark">
    <Application.Resources>
        <viewModel:ViewModelLocator x:Key="Locator" xmlns:vm="using:GPIOTest.ViewModel" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:ColorHexStringToBrushConverter x:Key="ColorHexStringToBrushConverter" />
        <converters:ColorHexStringToColorConverter x:Key="ColorHexStringToColorConverter" />

        <SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="#0072BC" />
        <SolidColorBrush x:Key="ToggleSwitchCurtainPointerOverBackgroundThemeBrush" Color="#0072BC" />
        <SolidColorBrush x:Key="ToggleSwitchCurtainPressedBackgroundThemeBrush" Color="#0072BC" />
    </Application.Resources>
</Application>
